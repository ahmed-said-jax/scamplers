{
	"name": "scamplers-frontend",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"build-scamplers-core": "wasm-pack build --dev --out-dir ../../typescript/scamplers-core ../../rust/scamplers-core -- --features web",
		"dev": "deno task build-scamplers-core && vite dev",
		"build": "deno task build-scamplers-core && vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
	},
	"dependencies": {
		"@auth/sveltekit": "^1.9.1",
		"daisyui": "^5.0.32",
		"scamplers-core": "file:../scamplers-core"
	},
	"devDependencies": {
		"@sveltejs/adapter-node": "^5.2.12",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/vite": "^4.0.0",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.0.0",
		"vite": "^6.2.6",
		"vite-plugin-wasm": "^3.4.1"
	}
}
